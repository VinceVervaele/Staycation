@model Travel.ViewModels.TravelVM

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h4>TravelVM</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Departure" class="control-label"></label>
                    <select class="form-control" asp-for="Departure"
                            asp-items="Model.CountryList">
                        <option disabled selected value="">Select a Country</option>
                    </select>
                    <span asp-validation-for="Departure" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Arrival" class="control-label"></label>
                    <select class="form-control" asp-for="Arrival"
                            asp-items="Model.CountryList">
                        <option disabled selected value="">Select a Country</option>
                    </select>
                    <span asp-validation-for="Arrival" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Startdatum" class="control-label"></label>
                    <input asp-for="Startdatum" class="form-control" id="StartDate"/>
                    <span asp-validation-for="Startdatum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Einddatum" class="control-label"></label>
                    <input asp-for="Einddatum" class="form-control" id="EndDate" />
                    <span asp-validation-for="Einddatum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

                <input id="aantalDagen" type="text" />
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    @section Scripts {
        <script>
            /* Traditional Anonymous Function:
                function (a){
                  return a + 100;
                }
               Arrow-functie
                (a) => { a + 100;}


               window.addEventListener("load", function(){
                           some code;
                    });

                // shorter

                $(function(){
                    some code;
                });

                // shorter
                 $(  () => {some code;
                });

                */

            $(() => {

                $("#EndDate").on('focusout', () => {
                    if ($('#StartDate').val() == "")
                        alert("don't forget begindate");
                    else {
                        let days = (new Date($('#EndDate').val())
                            - new Date($('#StartDate').val()))
                            / (1000 * 60 * 60 * 24);

                        $("#aantalDagen").val(days);
                    }
                })
            });

            $(function () {
                $("#StartDate").datepicker({
                    numberOfMonths: 3,
                    showButtonPanel: true
                });
            });

            $(document).ready(function () {
               $("#StartDate").datepicker({
                    numberOfMonths: 3,
                    beforeShowDay: $.datepicker.noWeekends,
                    minDate: new Date(),
                    dateFormat: "dd-mm-yy",

                    onSelect: function (date) {
                        var date2 = $('#StartDate').datepicker("getDate")
                        $('#EndDate').datepicker('option', 'minDate', date2)
                    }
               });

               $("#EndDate").datepicker({
                   numberOfMonts: 3,
                   beforeShowDay: $.datepicker.noWeekends,
                   minDate: new Date(),
                   dateFormat: 'dd-mm-yy'
               });
            });
        </script>
    } 
</body>
</html>